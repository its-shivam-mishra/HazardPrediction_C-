@model IEnumerable<WeatherHazardApi.Models.NotificationLog>

@{
    ViewData["Title"] = "Sent Notification History";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-history text-primary me-2"></i>Sent Notification History</h2>
    <p class="text-muted">Below is a list of notifications that have already been sent.</p>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="far fa-paper-plane me-1"></i>Sent Date</th>
                                <th><i class="fas fa-heading me-1"></i>Subject</th>
                                <th><i class="fas fa-users me-1"></i>No of Users</th>
                                <th><i class="fas fa-biohazard me-1"></i>Coverages</th>
                                <th><i class="fas fa-city me-1"></i>City</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SentDate.ToLocalTime().ToString("g")</td>
                                    <td>@item.EmailSubject</td>
                                    <td>
                                        <span class="badge bg-secondary">@item.UserIds.Count</span>
                                    </td>
                                    <td>
                                        @foreach (var coverage in item.CoverageIds)
                                        {
                                            <span class="badge bg-warning text-dark me-1">@coverage</span>
                                        }
                                    </td>
                                    <td class="fw-bold">
                                        @if (item.Cities != null && item.Cities.Any())
                                        {
                                            if (item.Cities.Count > 1)
                                            {
                                                <span title="@string.Join(", ", item.Cities)">Multiple (@item.Cities.Count)</span>
                                            }
                                            else
                                            {
                                                @item.Cities.First()
                                            }
                                        }
                                        else
                                        {
                                            @item.City
                                        }
                                    </td>
                                    <td>
                                        <form asp-action="ResendNotification" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="city" value="@item.City" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-redo me-1"></i>Resend
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <i class="fas fa-info-circle me-2"></i>No sent notifications found.
        </div>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">
        <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
    </a>
</div>

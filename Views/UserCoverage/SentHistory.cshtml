@model List<WeatherHazardApi.Models.UnifiedWeatherResponse>

@{
    ViewData["Title"] = "Sent Notification History";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-history text-primary me-2"></i>Sent Notification History</h2>
    <p class="text-muted">Below is a list of notifications that have already been sent.</p>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fas fa-city me-1"></i>City</th>
                                <th><i class="fas fa-biohazard me-1"></i>Hazards</th>
                                <th><i class="fas fa-info-circle me-1"></i>Explanation</th>
                                <th><i class="far fa-calendar-alt me-1"></i>Prediction Date</th>
                                <th><i class="far fa-paper-plane me-1"></i>Sent Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@item.City</td>
                                    <td>
                                        @if (item.HazardPrediction != null)
                                        {
                                            var hazards = new List<string>();
                                            if (item.HazardPrediction.FireRiskPercent > 0) 
                                            {
                                                <span class="badge bg-danger me-1"><i class="fas fa-fire me-1"></i>Fire (@item.HazardPrediction.FireRiskPercent %)</span>
                                            }
                                            if (item.HazardPrediction.FloodRiskPercent > 0) 
                                            {
                                                <span class="badge bg-primary me-1"><i class="fas fa-water me-1"></i>Flood (@item.HazardPrediction.FloodRiskPercent %)</span>
                                            }
                                            if (item.HazardPrediction.StormRiskPercent > 0) 
                                            {
                                                <span class="badge bg-dark me-1"><i class="fas fa-poo-storm me-1"></i>Storm (@item.HazardPrediction.StormRiskPercent %)</span>
                                            }
                                            if (item.HazardPrediction.HeatWaveRiskPercent > 0) 
                                            {
                                                <span class="badge bg-warning text-dark me-1"><i class="fas fa-sun me-1"></i>Heat (@item.HazardPrediction.HeatWaveRiskPercent %)</span>
                                            }
                                            if (item.HazardPrediction.SnowRiskPercent > 0) 
                                            {
                                                <span class="badge bg-info text-dark me-1"><i class="fas fa-snowflake me-1"></i>Snow (@item.HazardPrediction.SnowRiskPercent %)</span>
                                            }
                                        }
                                    </td>
                                    <td class="small text-muted">@item.HazardPrediction?.Explanation</td>
                                    <td class="small">@item.PredictionGeneratedDate.ToLocalTime().ToString("g")</td>
                                    <td class="small">@item.NotificationSentDate?.ToLocalTime().ToString("g")</td>
                                    <td>
                                        <form asp-action="ResendNotification" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="city" value="@item.City" />
                                            <button type="submit" class="btn btn-warning btn-sm">
                                                <i class="fas fa-redo me-1"></i>Resend
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <i class="fas fa-info-circle me-2"></i>No sent notifications found.
        </div>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">
        <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
    </a>
</div>
